doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Video player
    link(rel="stylesheet",href="assets/css/app.css")
    link(rel="stylesheet",href="assets/css/foundation.min.css")
    link(rel="stylesheet",href="assets/css/style.css")
    script(src="assets/js/vendor/jquery.js")
    script(src="assets/js/script.js")
  body
    div(id="my_video_player")
      video(id="video_player",preload="auto",poster="assets/img/poster_preload.png",onclick="playPause()")
        source(src="assets/videos/Alonzo - Binta.mp4",type="video/mp4")
      div(id="my_video_controller")
        button(id="playpausebtn")
        input(onmousemove="displayTimer()",id="seekslider",type="range",min="0",max="100",value="0",step="1")
        span(id="tooltiptext",class="tooltiptext") Firy zay 
        span(id="curtimetext") 00:00 /
        span(id="durtimetext") 00:00
        button(id="mutebtn") Mangina oe
        input(id="volumeslider",type="range",min="0",max="100",value="100",step="1")
        button(id="fullscreenbtn") [ fenoy ny tanana ]
    script(src="assets/js/vendor/what-input.js")
    script(src="assets/js/vendor/foundation.min.js")
    script(src="assets/js/app.js")
div.progressBar
  div.bufferBar
    